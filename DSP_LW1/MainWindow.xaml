                    </Grid.ColumnDefinitions>

                    <Grid VerticalAlignment="Center" Grid.Column="0">
                        <ComboBox
                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                            x:Name="cmbSignalType"
                            SelectedIndex="0"
